# ============================================================================
# Terraform Variables Example File
# ============================================================================
# Copy this file to terraform.tfvars and adjust values according to your environment
# ============================================================================

# Environment
environment = "dev"

# AWS Region
aws_region = "us-east-1"

# Application
app_name = "eventticket"
app_port = 8080

# Networking
vpc_cidr          = "10.0.0.0/16"
enable_nat_gateway = true
single_nat_gateway = false  # false = 1 NAT per AZ, true = 1 shared NAT (cheaper)

# App Runner Configuration
apprunner_cpu           = "0.5 vCPU"  # Options: 0.25, 0.5, 1, 2, 4 vCPU
apprunner_memory        = "1 GB"      # Options: 0.5, 1, 2, 3, 4, 6, 8, 12 GB
apprunner_min_size      = 1
apprunner_max_size      = 10
apprunner_max_concurrency = 100
apprunner_auto_deploy   = true        # Auto-deploy when image is updated

# Logging
log_retention_days = 7
